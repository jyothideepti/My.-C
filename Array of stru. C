#include <stdio.h>
struct Student {
    char name[50];
    int roll;
    float marks;
};
int main() {
    struct Student s[3]; 
  for (int i = 0; i < 3; i++) {
        printf("\nEnter details for Student %d\n", i + 1);
        printf("Name:\n");
        scanf("â„…s",&s[i].name);
        printf("Roll number:\n ");
        scanf("%d", &s[i].roll);
        printf("Marks: ");
        scanf("%f", &s[i].marks);
    }
     printf("\nStudent Information:\n");
    for (int i = 0; i < 3; i++) {
        printf("\nStudent %d\n", i + 1);
        printf("Name: %s", s[i].name);
        printf("Roll Number: %d\n", s[i].roll);
        printf("Marks: %.2f\n", s[i].marks);
    }

    return 0;
}
