#include <stdio.h>
struct Student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    struct Student s[3];  
    float total = 0, average;
   for(int i = 0; i < 3; i++) {
        printf("\nEnter details for Student %d\n", i + 1);
       printf("Name: ");
       scanf("â„…d",&s[i].name);

        printf("Roll Number: ");
        scanf("%d", &s[i].roll);

        printf("Marks: ");
        scanf("%f", &s[i].marks);

        total += s[i].marks; 
    }

    average = total / 3;

    // Display average marks
    printf("\nAverage Marks of 3 Students: %.2f\n", average);

    return 0;
}
